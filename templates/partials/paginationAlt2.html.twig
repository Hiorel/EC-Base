<div class="d-flex justify-content-center">
    {% if pages > 1 %}
    <ul class="pagination">
        <li class="page-item {% if page == 1 %}disabled{% endif %}">
            <a class="page-link" target="_self" href="{{ path(route, {'id': idArticle, 'page': page - 1})  }}#anchorComm">&laquo;</a>
        </li>
        {% for i in 1..pages %}
            {% if i in range(page - 4, page + 4)  %}                
                <li class="page-item {% if page == i %}active{% endif %}">
                    <a class="page-link" target="_self" href="{{ path(route, {'id': idArticle, 'page': i})  }}#anchorComm">{{i}}</a>
                </li> 
            {% endif %}    
        {% endfor %}
        <li class="page-item {% if page == pages %}disabled{% endif %}">
            <a class="page-link" target="_self" href="{{ path(route, {'id': idArticle, 'page': page + 1}) }}#anchorComm">&raquo;</a>
         </li>
    </ul>
    {% endif %}
</div>