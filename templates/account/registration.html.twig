{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="block-title">
        <div class="title-bar"><h1>Inscription &nbsp;</h1></div>
        <div class="bar-bar"><hr class="hr-title"></div>
        <img src="{{asset('build/images/logo_title.png')}}" alt="Icone de Chocobo" class="logo-bar">
    </div>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md">
            <div class="bg-light p-2">
                <h2>Informations générales</h2>
                <hr>
                {{ form_row(form.name) }}
                {{ form_row(form.email) }}
                {{ form_row(form.hash) }}
                {{ form_row(form.passwordConfirm) }}
            </div>
        </div>
        <div class="col-md">
            <div class="bg-light p-2">
                <h2>Votre avatar</h2>
                <hr>
                {{ form_row(form.avatar) }}
            </div>    
        </div>
    </div>
        <button type="submit" class="btn btn-success mt-3"><i class="fas fa-check"></i>  Confirmez l'inscription</button>
    {{ form_end(form) }}
{% endblock %}
